for_window [app_id="firefox"] inhibit_idle fullscreen


bindswitch --reload --locked lid:off exec swaymsg "output * dpms on" && swaylock -i Imagens/Papeis-de-Parede-e-Icones/windows.jpeg --clock --effect-blur 7x5 --ring-color 3399ff --line-color 004de6 --separator-color 004de6 --inside-ver-color 004de6 --key-hl-color 004de6
